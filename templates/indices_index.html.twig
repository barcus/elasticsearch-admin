{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ 'indices'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'indices'|trans, 'badge': indices.total}) }}
{% endblock %}

{% block tabs %}
    {% include 'indices_tabs.html.twig' with {'active': 'list'} %}
{% endblock %}

{% block buttons %}
    {% embed 'buttons_embed.html.twig' %}
        {% import 'app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.button({'title': 'create_index'|trans, 'url': path('indices_create', {})}) }}

            {{ appImport.buttonModal({
                'id': 'IndicesCacheClearAll',
                'title': 'cache_clear'|trans,
                'href': path('indices_cache_clear_all', {}),
            }) }}

            {{ appImport.buttonModal({
                'id': 'IndicesFlushAll',
                'title': 'flush'|trans,
                'href': path('indices_flush_all', {}),
            }) }}

            {{ appImport.buttonModal({
                'id': 'IndicesRefreshAll',
                'title': 'refresh'|trans,
                'href': path('indices_refresh_all', {}),
            }) }}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block main_content %}
    {% if 0 < indices.total %}
        {% embed 'card_embed.html.twig' %}
            {% import 'app_import.html.twig' as appImport %}
            {% block content %}
                {{ appImport.paginator(indices) }}

                {% include 'indices_list.html.twig' with {'indices': indices} %}

                {{ appImport.paginator(indices) }}
            {% endblock %}
        {% endembed %}
    {% endif %}
{% endblock %}
