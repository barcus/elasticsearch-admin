{% macro dashboardKpi(title, value) %}
    <div class="text-center mb-4 col-12 col-md-4 col-lg-3">
        <h4>{{ title }}</h4>
        <h3><span class="badge badge-primary">{{ value }}</span></h3>
    </div>
{% endmacro %}

{% macro getPercent(total, partial, round) %}
{% apply spaceless %}
    {% if(total > 0) %}
        {% set percent = (partial * 100) / total %}
    {% else %}
        {% set percent = 0 %}
    {% endif %}

    {{ percent|round(round) }}
{% endapply %}
{% endmacro %}
