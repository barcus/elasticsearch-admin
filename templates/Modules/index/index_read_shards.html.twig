{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ 'indices'|trans }} - {{ index['index'] }} - {{ 'shards'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'indices'|trans, 'link': path('indices', {})}) }}
{% endblock %}

{% block heading_2 %}
    {{ appImport.heading({'level': 2, 'title': index['index']}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/index/index_read_tabs.html.twig' with {'active': 'shards'} %}
{% endblock %}

{% block main_content %}
    {% embed 'card_embed.html.twig' %}
        {% import 'app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'shards'|trans, 'badge': shards.total}) }}

            {% if 0 < shards.total %}

                <p>
                    <button class="btn btn-secondary btn-sm" type="button" data-toggle="collapse" data-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                        {{ 'filter'|trans }}
                    </button>
                </p>

                <div class="collapse" id="collapseFilter">
                    <p>
                        <strong>{{ 'primary'|trans }}</strong><br>
                        {% for v in ['true', 'false'] %}
                            <span class="custom-control custom-switch d-inline mr-2">
                                <input
                                    type="checkbox"
                                    class="custom-control-input searchCheckbox"
                                    id="primary{{ v }}Switch"
                                    checked="checked"
                                    value="primary-{{ v }}"
                                >
                                <label class="custom-control-label" for="primary{{ v }}Switch">{{ appImport.badge({'title': ('boolean.' ~ v)|trans, 'context': v}) }}</label>
                            </span>
                        {% endfor %}
                    </p>

                    <p>
                        <strong>{{ 'state'|trans }}</strong><br>
                        {% for v in ['INITIALIZING', 'RELOCATING', 'STARTED', 'UNASSIGNED'] %}
                            <span class="custom-control custom-switch d-inline mr-2">
                                <input
                                    type="checkbox"
                                    class="custom-control-input searchCheckbox"
                                    id="state{{ v }}Switch"
                                    checked="checked"
                                    value="state-{{ v }}"
                                >
                                <label class="custom-control-label" for="state{{ v }}Switch">{{ v }}</label>
                            </span>
                        {% endfor %}
                    </p>
                </div>

                {{ appImport.paginator(shards) }}

                {% include 'Modules/index/index_read_shards_list.html.twig' with {'shards': shards} %}

                {{ appImport.paginator(shards) }}
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}
