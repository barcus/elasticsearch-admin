{% extends 'base.html.twig' %}
{% import 'Import/app_import.html.twig' as appImport %}

{% block head_title %}{{ 'indices'|trans }} - {{ index.name }} - {{ 'shards'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'indices'|trans, 'link': {'url': path('indices')}}) }}
{% endblock %}

{% block heading_2 %}
    {{ appImport.heading({'level': 2, 'title': index.name}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/index/index_read_tabs.html.twig' with {'active': 'shards'} %}
{% endblock %}

{% block main_content %}
    {% embed 'Embed/card_embed.html.twig' %}
        {% import 'Import/app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'shards'|trans, 'badge': {'title': shards.total}}) }}

            {% if 0 < shards.total %}
                {{ appImport.paginator(shards) }}

                {% include 'Modules/shard/shard_list.html.twig' with {'shards': shards, 'context': 'index_shards'} %}

                {{ appImport.paginator(shards) }}
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}
