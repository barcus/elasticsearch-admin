{% embed 'Embed/table_embed.html.twig' %}
    {% import 'Import/app_import.html.twig' as appImport %}

    {% set columns = {'name': true, 'shards': true, 'replicas': true, 'documents': true, 'documents_deleted': false, 'primary_size': true, 'total_size': true, 'status': true, 'health': true, 'frozen': false, 'creation_date': true} %}

    {% if true == check_version('6.6') %}
        {% set columns = columns|merge({'frozen': true}) %}
    {% endif %}

    {% block thead %}
        <tr>
            {% for column, display in columns %}
                {% if true == display %}
                    {% if 'name' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'index', 'title': 'name'|trans})}}
                        </th>
                    {% endif %}

                    {% if 'shards' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'pri', 'title': 'shards'|trans})}}
                        </th>
                    {% endif %}

                    {% if 'replicas' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'rep', 'title': 'replicas'|trans})}}
                        </th>
                    {% endif %}

                    {% if 'documents' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'docs.count', 'title': 'documents'|trans})}}
                        </th>
                    {% endif %}

                    {% if 'documents_deleted' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'docs.deleted', 'title': 'documents_deleted'|trans})}}
                        </th>
                    {% endif %}

                    {% if 'primary_size' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'pri.store.size', 'title': 'primary_size'|trans})}}
                        </th>
                    {% endif %}

                    {% if 'total_size' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'store.size', 'title': 'total_size'|trans})}}
                        </th>
                    {% endif %}

                    {% if 'status' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'status', 'title': 'status'|trans})}}
                        </th>
                    {% endif %}

                    {% if 'health' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'health', 'title': 'health'|trans})}}
                        </th>
                    {% endif %}

                    {% if 'frozen' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'sth', 'title': 'frozen'|trans})}}
                        </th>
                    {% endif %}

                    {% if 'creation_date' == column %}
                        <th>
                            {{ appImport.sort({'cat_sort': cat_sort, 'url': path('indices'), 's': 'creation.date.string', 'title': 'creation_date'|trans})}}
                        </th>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </tr>
    {% endblock %}

    {% block tbody %}
        {% for row in indices.rows %}
            <tr class="index_system-{% if row.isSystem %}true{% else %}false{% endif %} status-{{ row.status }} health-{{ row.health }} frozen-{{ row.frozen }}" data-search="{{ row.name }}">
                {% for column, display in columns %}
                    {% if true == display %}
                        {% if 'name' == column %}
                            <td>
                                <a href="{{ path('indices_read', {'index': row.name}) }}">{{ row.name }}</a>
                            </td>
                        {% endif %}

                        {% if 'shards' == column %}
                            <td>
                                {{ row.shards }}
                            </td>
                        {% endif %}

                        {% if 'replicas' == column %}
                            <td>
                                {{ row.replicas }}
                            </td>
                        {% endif %}

                        {% if 'documents' == column %}
                            <td>
                                {{ row.documents }}
                            </td>
                        {% endif %}

                        {% if 'documents_deleted' == column %}
                            <td>
                                {{ row.documentsDeleted }}
                            </td>
                        {% endif %}

                        {% if 'primary_size' == column %}
                            <td>
                                {{ row.primarySize|human_filesize }}
                            </td>
                        {% endif %}

                        {% if 'total_size' == column %}
                            <td>
                                {{ row.totalSize|human_filesize }}
                            </td>
                        {% endif %}

                        {% if 'status' == column %}
                            <td>
                                {% if row.status %}
                                    {{ appImport.badge({'title': row.status|trans, 'context': row.status}) }}
                                {% endif %}
                            </td>
                        {% endif %}

                        {% if 'health' == column %}
                            <td>
                                {% if row.health %}
                                    {{ appImport.badge({'title': row.health|trans, 'context': row.health}) }}
                                {% endif %}
                            </td>
                        {% endif %}

                        {% if 'frozen' == column %}
                            <td>
                                {{ appImport.badge({'title': ('boolean.' ~ row.frozen)|trans, 'context': row.frozen}) }}
                            </td>
                        {% endif %}

                        {% if 'creation_date' == column %}
                            <td>
                                {{ row.creationDate }}
                            </td>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
