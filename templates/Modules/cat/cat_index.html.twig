{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ 'cat'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'cat'|trans}) }}
{% endblock %}

{% block main_content %}
    {% embed 'card_embed.html.twig' %}
        {% import 'app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.form({'form': form}) }}
        {% endblock %}
    {% endembed %}

    {% if rows is defined %}
        {% embed 'card_embed.html.twig' %}
            {% import 'app_import.html.twig' as appImport %}
            {% block content %}
                {{ appImport.heading({'level': 3, 'title': command, 'badge': rows|length}) }}

                {% if help is defined %}
                    <p>
                        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseHelp" aria-expanded="false" aria-controls="collapseHelp">
                            {{ 'help'|trans }}
                        </button>
                    </p>

                    <div class="collapse mb-4" id="collapseHelp">
                        <div class="card card-body">
                            <pre><code>{{ help }}</code></pre>
                        </div>
                    </div>
                {% endif %}

                {% if 0 < rows|length %}
                    {% embed 'table_embed.html.twig' %}
                        {% block thead %}
                            <tr>
                                {% for header in headers %}
                                    <th>
                                        {{ header }}
                                    </th>
                                {% endfor %}
                            </tr>
                        {% endblock %}

                        {% block tbody %}
                            {% for row in rows %}
                                <tr>
                                    {% for column in row %}
                                        <td>
                                            {{ column }}
                                        </td>
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}
                {% endif %}
            {% endblock %}
        {% endembed %}
    {% endif %}
{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script type="text/javascript">
        function toggle() {
            var command = $('#data_command').val();

            if (command.indexOf('{index}') != -1) {
                $('#data_index').parent().show();
                $('#data_index').attr('required', 'required');
            } else {
                $('#data_index').parent().hide();
                $('#data_index').removeAttr('required');
            }

            if (command.indexOf('{repository}') != -1) {
                $('#data_repository').parent().show();
                $('#data_repository').attr('required', 'required');
            } else {
                $('#data_repository').parent().hide();
                $('#data_repository').removeAttr('required');
            }

            if (command.indexOf('{alias}') != -1) {
                $('#data_alias').parent().show();
                $('#data_alias').attr('required', 'required');
            } else {
                $('#data_alias').parent().hide();
                $('#data_alias').removeAttr('required');
            }
        }

        toggle();

        $(document).on('change', '#data_command', function(event) {
            toggle();
        });
    </script>
{% endblock %}
