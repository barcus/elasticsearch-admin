{% extends 'base.html.twig' %}
{% import 'Import/app_import.html.twig' as appImport %}

{% block head_title %}{{ 'shards'|trans }} - {{ shard.number }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'shards'|trans, 'link': {'url': path('shards')}}) }}
{% endblock %}

{% block heading_2 %}
    {{ appImport.heading({'level': 2, 'title': shard.number}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/shard/shard_read_tabs.html.twig' with {'active': 'summary'} %}
{% endblock %}

{% block main_content %}
    {% embed 'Embed/card_embed.html.twig' %}
        {% import 'Import/app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'summary'|trans}) }}

            <hr>

            <div class="row">
                {% if shard.settings['discovery']['type'] is defined and 'single-shard' == shard.settings['discovery']['type'] %}
                    {{ appImport.dashboardKpi({'title': 'master_eligible'|trans, 'badge': {'title': 'boolean.true'|trans, 'context': 'true'}}) }}
                {% else %}
                    {{ appImport.dashboardKpi({'title': 'master_eligible'|trans, 'badge': {'title': ('boolean.' ~ shard.settings['shard']['master'])|trans, 'context': shard.settings['shard']['master']}}) }}
                {% endif %}

                {% if shard.settings['discovery']['type'] is defined and 'single-shard' == shard.settings['discovery']['type'] %}
                    {{ appImport.dashboardKpi({'title': 'voting_only'|trans, 'badge': {'title': 'boolean.false'|trans, 'context': 'false'}}) }}
                {% else %}
                    {% if shard.settings['shard']['voting_only'] is defined %}
                        {{ appImport.dashboardKpi({'title': 'voting_only'|trans, 'badge': {'title': ('boolean.' ~ shard.settings['shard']['voting_only'])|trans, 'context': shard.settings['shard']['voting_only']}}) }}
                    {% else %}
                        {{ appImport.dashboardKpi({'title': 'voting_only'|trans, 'badge': {'title': 'boolean.false'|trans, 'context': 'false'}}) }}
                    {% endif %}
                {% endif %}

                {% if shard.settings['discovery']['type'] is defined and 'single-shard' == shard.settings['discovery']['type'] %}
                    {{ appImport.dashboardKpi({'title': 'data'|trans, 'badge': {'title': 'boolean.true'|trans, 'context': 'true'}}) }}
                {% else %}
                    {{ appImport.dashboardKpi({'title': 'data'|trans, 'badge': {'title': ('boolean.' ~ shard.settings['shard']['data'])|trans, 'context': shard.settings['shard']['data']}}) }}
                {% endif %}

                {{ appImport.dashboardKpi({'title': 'ip'|trans, 'badge': {'title': shard.ip}}) }}

                {{ appImport.dashboardKpi({'title': 'version_es'|trans, 'badge': {'title': shard.version}}) }}

                {% if shard.os['pretty_name'] is defined %}
                    {{ appImport.dashboardKpi({'title': 'os'|trans, 'badge': {'title': shard.os['pretty_name']}}) }}
                {% endif %}

                {{ appImport.dashboardKpi({'title': 'os_version'|trans, 'badge': {'title': shard.os['version']}}) }}

                {{ appImport.dashboardKpi({'title': 'os_arch'|trans, 'badge': {'title': shard.os['arch']}}) }}
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
