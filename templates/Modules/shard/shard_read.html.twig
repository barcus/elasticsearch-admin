{% extends 'base.html.twig' %}
{% import 'Import/app_import.html.twig' as appImport %}

{% block head_title %}{{ 'shards'|trans }} - {{ index.name }}/{{ number }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'shards'|trans, 'link': {'url': path('shards')}}) }}
{% endblock %}

{% block heading_2 %}
    {{ appImport.heading({'level': 2, 'title': index.name ~ '/' ~ number}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/shard/shard_read_tabs.html.twig' with {'active': 'summary'} %}
{% endblock %}

{% block main_content %}
    {% embed 'Embed/card_embed.html.twig' %}
        {% import 'Import/app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'summary'|trans}) }}

            {% include 'Modules/index/index_read_shards_list.html.twig' with {'shards': shards, 'context': 'allocation'} %}

        {% endblock %}
    {% endembed %}
{% endblock %}
