{% import 'Import/app_import.html.twig' as appImport %}
<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link{% if 'summary' == active %} active{% endif %}" href="{{ path('cluster') }}">{{ 'summary'|trans }}</a>
    </li>

    {% if is_granted('CLUSTER_SETTINGS', 'global') %}
        <li class="nav-item">
            <a class="nav-link{% if 'settings' == active %} active{% endif %}" href="{{ path('cluster_settings') }}">{{ 'settings'|trans }}</a>
        </li>
    {% endif %}

    {% if is_granted('CLUSTER_ALLOCATION_EXPLAIN', 'global') %}
        {% if 0 < cluster_health['unassigned_shards'] or 'allocation_explain' == active %}
            <li class="nav-item">
                <a class="nav-link{% if 'allocation_explain' == active %} active{% endif %}" href="{{ path('cluster_allocation_explain') }}">{{ 'allocation_explain'|trans }}{% if false == check_version('5.0') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}</a>
            </li>
        {% endif %}
    {% endif %}
</ul>
