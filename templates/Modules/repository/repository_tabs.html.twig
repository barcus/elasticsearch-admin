{% import 'Import/app_import.html.twig' as appImport %}
<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link{% if 'list' == active %} active{% endif %}" href="{{ path('repositories') }}">{{ 'list'|trans }}</a>
    </li>

    {% if is_granted('REPOSITORIES_CREATE', 'global') %}
        <li class="nav-item">
            <a class="nav-link{% if 'create_repository_fs' == active %} active{% endif %}" href="{{ path('repositories_create', {'type': 'fs'}) }}">{{ 'create_repository_fs'|trans }}</a>
        </li>

        <li class="nav-item">
            <a class="nav-link{% if 'create_repository_s3' == active %} active{% endif %}" href="{{ path('repositories_create', {'type': 's3'}) }}">{{ 'create_repository_s3'|trans }}{% if false == has_plugin('repository-s3') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}</a>
        </li>

        <li class="nav-item">
            <a class="nav-link{% if 'create_repository_gcs' == active %} active{% endif %}" href="{{ path('repositories_create', {'type': 'gcs'}) }}">{{ 'create_repository_gcs'|trans }}{% if false == has_plugin('repository-gcs') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}</a>
        </li>
    {% endif %}
</ul>
