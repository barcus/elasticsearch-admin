{% import 'Import/app_import.html.twig' as appImport %}
<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link {% if 'summary' == active %}active {{ theme_tab_active }}{% else %}{{ theme_tab }}{% endif %}" href="{{ path('repositories_read', {'repository': repository.name}) }}">{{ 'summary'|trans }}</a>
    </li>

    {% if is_granted('REPOSITORY_UPDATE', repository) %}
        <li class="nav-item">
            <a class="nav-link {% if 'update' == active %}active {{ theme_tab_active }}{% else %}{{ theme_tab }}{% endif %}" href="{{ path('repositories_update', {'repository': repository.name}) }}">{{ 'update'|trans }}</a>
        </li>
    {% endif %}

    {% if is_granted('SNAPSHOTS_CREATE', 'global') %}
        <li class="nav-item">
            <a class="nav-link {{ theme_tab }}" href="{{ path('snapshots_create', {'repository': repository.name}) }}">{{ 'create_snapshot'|trans }}</a>
        </li>
    {% endif %}

    {% if is_granted('SLM_POLICIES_CREATE', 'global') %}
        <li class="nav-item">
            <a class="nav-link {{ theme_tab }}" href="{{ path('slm_create', {'repository': repository.name}) }}">{{ 'create_slm_policy'|trans }}</a>
        </li>
    {% endif %}
</ul>
