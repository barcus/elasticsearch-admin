{% extends 'base.html.twig' %}
{% import 'Import/app_import.html.twig' as appImport %}

{% block head_title %}{{ 'snapshot_policies'|trans }} - {{ snapshot['snapshot'] }} - {{ 'failures'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'snapshots'|trans, 'link': path('snapshots', {})}) }}
{% endblock %}

{% block heading_2 %}
    {{ appImport.heading({'level': 2, 'title': snapshot['snapshot']}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/snapshot/snapshot_read_tabs.html.twig' with {'active': 'failures'} %}
{% endblock %}

{% block main_content %}
    {% embed 'Embed/card_embed.html.twig' %}
        {% import 'Import/app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'failures'|trans, 'badge': snapshot['failures']|length}) }}

            {% if 0 < snapshot['failures']|length %}
                {% embed 'Embed/table_embed.html.twig' %}
                    {% import 'Import/app_import.html.twig' as appImport %}

                    {% block thead %}
                        <tr>
                            <th>
                                {{ 'index'|trans }}
                            </th>
                            <th>
                                {{ 'shard'|trans }}
                            </th>
                            <th>
                                {{ 'reason'|trans }}
                            </th>
                            <th>
                                {{ 'node'|trans }}
                            </th>
                            <th>
                                {{ 'status'|trans }}
                            </th>
                        </tr>
                    {% endblock %}

                    {% block tbody %}
                        {% for failure in snapshot['failures'] %}
                            <tr>
                                <td>
                                    <a href="{{ path('indices_read', {'index': failure['index']}) }}">{{ failure['index'] }}</a>
                                </td>
                                <td>
                                    {{ failure['shard_id'] }}
                                </td>
                                <td>
                                    {{ failure['reason'] }}
                                </td>
                                <td>
                                    {% if nodes[failure['node_id']] is defined %}
                                        <a href="{{ path('nodes_read', {'node': nodes[failure['node_id']]}) }}">{{ nodes[failure['node_id']] }}</a>{% if master_node == nodes[failure['node_id']] %}{{ appImport.badge({'title': 'master'|trans, 'context': 'master_node'}) }}{% endif %}
                                    {% else %}
                                        {{ failure['node_id'] }}
                                    {% endif %}
                                </td>
                                <td>
                                    {{ failure['status'] }}
                                </td>
                            </tr>
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}
