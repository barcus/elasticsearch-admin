{% extends 'base.html.twig' %}
{% import 'Import/app_import.html.twig' as appImport %}

{% block head_title %}{{ 'component_templates'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'component_templates'|trans}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/component_template/component_template_tabs.html.twig' with {'active': 'list'} %}
{% endblock %}

{% block main_content %}
    {% embed 'Embed/block_embed.html.twig' %}
        {% import 'Import/app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.form({'form': form, 'type': 'search'}) }}
        {% endblock %}
    {% endembed %}

    {% embed 'Embed/block_embed.html.twig' %}
        {% import 'Import/app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'list'|trans, 'badge': {'title': templates.total}}) }}

            {% if 0 < templates.total %}
                {{ appImport.paginator(templates) }}

                {% include 'Modules/component_template/component_template_list.html.twig' with {'templates': templates} %}

                {{ appImport.paginator(templates) }}
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}
