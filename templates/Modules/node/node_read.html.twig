{% extends 'base.html.twig' %}
{% import 'Import/app_import.html.twig' as appImport %}

{% block head_title %}{{ 'nodes'|trans }} - {{ node['name'] }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'nodes'|trans, 'link': path('nodes', {})}) }}
{% endblock %}

{% block heading_2 %}
    {% if master_node == node['name'] %}
        {{ appImport.heading({'level': 2, 'title': node['name'], 'badge': 'master'|trans, 'badge_context': 'master_node'}) }}
    {% else %}
        {{ appImport.heading({'level': 2, 'title': node['name']}) }}
    {% endif %}
{% endblock %}

{% block tabs %}
    {% include 'Modules/node/node_read_tabs.html.twig' with {'active': 'summary'} %}
{% endblock %}

{% block main_content %}
    {% embed 'Embed/card_embed.html.twig' %}
        {% import 'Import/app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'summary'|trans}) }}

            {% if node['settings']['discovery']['type'] is defined and 'single-node' == node['settings']['discovery']['type'] %}
            {% else %}
                <p>
                    <strong>{{ 'master_eligible'|trans }}</strong><br>
                    {{ appImport.badge({'title': ('boolean.' ~ node['settings']['node']['master'])|trans, 'context': node['settings']['node']['master']}) }}
                </p>

                <p>
                    <strong>{{ 'voting_only'|trans }}</strong><br>
                    {% if node['settings']['node']['voting_only'] is defined %}
                        {{ appImport.badge({'title': ('boolean.' ~ node['settings']['node']['voting_only'])|trans, 'context': node['settings']['node']['voting_only']}) }}
                    {% else %}
                        {{ appImport.badge({'title': 'boolean.false'|trans, 'context': 'false'}) }}
                    {% endif %}
                </p>

                <p>
                    <strong>{{ 'data'|trans }}</strong><br>
                    {{ appImport.badge({'title': ('boolean.' ~ node['settings']['node']['data'])|trans, 'context': node['settings']['node']['data']}) }}
                </p>
            {% endif %}

            <p>
                <strong>{{ 'ip'|trans }}</strong><br>
                {{ node['ip'] }}
            </p>

            <p>
                <strong>{{ 'version'|trans }}</strong><br>
                {{ node['version'] }}
            </p>

            <p>
                <strong>{{ 'os'|trans }}</strong><br>
                {{ node['os']['pretty_name'] }}
            </p>

            <p>
                <strong>{{ 'os_version'|trans }}</strong><br>
                {{ node['os']['version'] }}
            </p>

            <p>
                <strong>{{ 'os_arch'|trans }}</strong><br>
                {{ node['os']['arch'] }}
            </p>
        {% endblock %}
    {% endembed %}
{% endblock %}
