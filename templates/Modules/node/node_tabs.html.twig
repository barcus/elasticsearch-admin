{% import 'Import/app_import.html.twig' as appImport %}
<ul class="nav nav-tabs mb-4">
    {% if is_granted('NODES', 'global') %}
        <li class="nav-item">
            <a class="nav-link text-{{ theme_color_2 }}{% if 'list' == active %} active bg-{{ theme_color_1 }}{% endif %}" href="{{ path('nodes') }}">{{ 'list'|trans }}</a>
        </li>
    {% endif %}

    {% if is_granted('NODES_STATS', 'global') %}
        <li class="nav-item">
            <a class="nav-link text-{{ theme_color_2 }}{% if 'stats' == active %} active bg-{{ theme_color_1 }}{% endif %}" href="{{ path('nodes_stats') }}">{{ 'stats'|trans }}</a>
        </li>
    {% endif %}

    {% if is_granted('NODES_RELOAD_SECURE_SETTINGS', 'global') %}
        <li class="nav-item">
            <a class="nav-link text-{{ theme_color_2 }}{% if 'reload_secure_settings' == active %} active bg-{{ theme_color_1 }}{% endif %}" href="{{ path('nodes_reload_secure_settings') }}">{{ 'reload_secure_settings'|trans }}{% if false == hasFeature('reload_secure_settings') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}</a>
        </li>
    {% endif %}
</ul>
