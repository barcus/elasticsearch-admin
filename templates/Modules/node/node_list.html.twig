{% embed 'Embed/table_embed.html.twig' %}
    {% import 'Import/app_import.html.twig' as appImport %}

    {% set columns = {'name': true, 'master_eligible': false, 'voting_only': false, 'data': false, 'uptime': true, 'load_average': false, 'cpu_usage': true, 'memory_usage': true, 'disk_usage': false, 'heap_usage': true} %}

    {% if true == hasFeature('load_average') %}
        {% set columns = columns|merge({'load_average': true}) %}
    {% endif %}

    {% if true == hasFeature('node_roles') %}
        {% set columns = columns|merge({'master_eligible': true, 'data': true}) %}

        {% if true == hasFeature('voting_only') %}
            {% set columns = columns|merge({'voting_only': true}) %}
        {% endif %}
    {% endif %}

    {% if true == hasFeature('cat_nodes_disk') %}
        {% set columns = columns|merge({'disk_usage': true}) %}
    {% endif %}

    {% block thead %}
        <tr>
            {% for column, display in columns %}
                {% if true == display %}
                    {% if 'name' == column %}
                        <th>
                            {{ 'name'|trans }}
                        </th>
                    {% endif %}

                    {% if 'master_eligible' == column %}
                        <th class="d-none d-xl-table-cell">
                            {{ 'master_eligible'|trans }}
                        </th>
                    {% endif %}

                    {% if 'voting_only' == column %}
                        <th class="d-none d-xl-table-cell">
                            {{ 'voting_only'|trans }}
                        </th>
                    {% endif %}

                    {% if 'data' == column %}
                        <th class="d-none d-xl-table-cell">
                            {{ 'data'|trans }}
                        </th>
                    {% endif %}

                    {% if 'cpu_usage' == column %}
                        <th>
                            {{ 'cpu_usage'|trans }}
                        </th>
                    {% endif %}

                    {% if 'heap_usage' == column %}
                        <th>
                            {{ 'heap_usage'|trans }}
                        </th>
                    {% endif %}

                    {% if 'memory_usage' == column %}
                        <th>
                            {{ 'memory_usage'|trans }}
                        </th>
                    {% endif %}

                    {% if 'disk_usage' == column %}
                        <th>
                            {{ 'disk_usage'|trans }}
                        </th>
                    {% endif %}

                    {% if 'uptime' == column %}
                        <th class="d-none d-xl-table-cell">
                            {{ 'uptime'|trans }}
                        </th>
                    {% endif %}

                    {% if 'load_average' == column %}
                        <th>
                            {{ 'load_average'|trans }}
                        </th>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </tr>
    {% endblock %}

    {% block tbody %}
        {% for row in nodes.rows %}
            {% if true == hasFeature('node_roles') and row['roles'] is defined %}
                <tr class="master_eligible-{% if 'master' in row['roles'] %}true{% else %}false{% endif %} voting_only-{% if 'voting_only' in row['roles'] %}true{% else %}false{% endif %} data-{% if 'data' in row['roles'] %}true{% else %}false{% endif %}" data-search="{{ row['name'] }}">
            {% else %}
                <tr data-search="{{ row['name'] }}">
            {% endif %}
                {% for column, display in columns %}
                    {% if true == display %}
                        {% if 'name' == column %}
                            <td>
                                <a href="{{ path('nodes_read', {'node': row['name']}) }}">{{ row['name'] }}</a>
                                {% if '*' == row['master'] %}{{ appImport.badge({'title': 'master'|trans, 'context': 'master_node'}) }}{% endif %}
                                {% if row['host'] is defined %}
                                    <br><small>{{ 'host'|trans }}: {{ row['host'] }}</small>
                                {% endif %}
                                {% if row['version'] is defined %}
                                    <br><small>{{ 'version_es'|trans }}: {{ row['version'] }}</small>
                                {% endif %}
                                {% if row['jvm']['version'] is defined %}
                                    <br><small>{{ 'version_jvm'|trans }}: {{ row['jvm']['version'] }}</small>
                                {% endif %}
                            </td>
                        {% endif %}

                        {% if 'master_eligible' == column %}
                            <td class="d-none d-xl-table-cell">
                                {% if row['roles'] is defined %}
                                    {% if 'master' in row['roles'] %}
                                        {{ appImport.badge({'title': 'boolean.true'|trans, 'context': 'true'}) }}
                                    {% else %}
                                        {{ appImport.badge({'title': 'boolean.false'|trans, 'context': 'false'}) }}
                                    {% endif %}
                                {% endif %}
                            </td>
                        {% endif %}

                        {% if 'voting_only' == column %}
                            <td class="d-none d-xl-table-cell">
                                {% if true == hasFeature('voting_only') and row['roles'] is defined %}
                                    {% if 'voting_only' in row['roles'] %}
                                        {{ appImport.badge({'title': 'boolean.true'|trans, 'context': 'true'}) }}
                                    {% else %}
                                        {{ appImport.badge({'title': 'boolean.false'|trans, 'context': 'false'}) }}
                                    {% endif %}
                                {% endif %}
                            </td>
                        {% endif %}

                        {% if 'data' == column %}
                            <td class="d-none d-xl-table-cell">
                                {% if row['roles'] is defined %}
                                    {% if 'data' in row['roles'] %}
                                        {{ appImport.badge({'title': 'boolean.true'|trans, 'context': 'true'}) }}
                                    {% else %}
                                        {{ appImport.badge({'title': 'boolean.false'|trans, 'context': 'false'}) }}
                                    {% endif %}
                                {% endif %}
                            </td>
                        {% endif %}

                        {% if 'cpu_usage' == column %}
                            <td>
                                {% if row['stats']['os']['cpu']['percent'] is defined %}
                                    <strong><span id="{{ row['name'] }}-os-cpu-percent">{{ row['stats']['os']['cpu']['percent'] }}</span>%</strong>
                                    <br><small>{{ 'process'|trans }}: <span id="{{ row['name'] }}-process-cpu-percent">{{ row['stats']['process']['cpu']['percent'] }}</span>%</small>
                                {% else %}
                                    <strong>{{ 'process'|trans }}: <span id="{{ row['name'] }}-process-cpu-percent">{{ row['stats']['process']['cpu']['percent'] }}</span>%</strong>
                                {% endif %}
                                {% if row['os']['allocated_processors'] is defined %}
                                    <br><small>{{ 'processors'|trans }}: <span id="{{ row['name'] }}-os-allocated_processors">{{ row['os']['allocated_processors'] }}</span></small>
                                {% endif %}
                            </td>
                        {% endif %}

                        {% if 'heap_usage' == column %}
                            <td>
                                <strong><span id="{{ row['name'] }}-heap-percent">{{ row['heap.percent'] }}</span>%</strong>
                                {% if row['heap.current'] is defined %}
                                    <br><small>{{ 'used'|trans }}: <span id="{{ row['name'] }}-heap-current">{{ row['heap.current']|human_filesize }}</span></small>
                                {% endif %}
                                <br><small>{{ 'total'|trans }}: <span id="{{ row['name'] }}-heap-max">{{ row['heap.max']|human_filesize }}</span></small>
                            </td>
                        {% endif %}

                        {% if 'memory_usage' == column %}
                            <td>
                                <strong><span id="{{ row['name'] }}-ram-percent">{{ row['ram.percent'] }}</span>%</strong>
                                {% if row['ram.current'] is defined %}
                                    <br><small>{{ 'used'|trans }}: <span id="{{ row['name'] }}-ram-current">{{ row['ram.current']|human_filesize }}</span></small>
                                {% endif %}
                                <br><small>{{ 'total'|trans }}: <span id="{{ row['name'] }}-ram-max">{{ row['ram.max']|human_filesize }}</span></small>
                            </td>
                        {% endif %}

                        {% if 'disk_usage' == column %}
                            <td>
                                <strong><span id="{{ row['name'] }}-disk-used_percent">{{ row['disk.used_percent'] }}</span>%</strong>
                                <br><small>{{ 'used'|trans }}: <span id="{{ row['name'] }}-disk-used">{{ row['disk.used']|human_filesize }}</span></small>
                                <br><small>{{ 'total'|trans }}: <span id="{{ row['name'] }}-disk-total">{{ row['disk.total']|human_filesize }}</span></small><br>

                                <span id="{{ row['name'] }}-disk-watermark_low" class="badge badge-warning d-none">{{ 'watermark_low'|trans }}</span>
                                <span id="{{ row['name'] }}-disk-watermark_high" class="badge badge-danger d-none">{{ 'watermark_high'|trans }}</span>
                                <span id="{{ row['name'] }}-disk-watermark_flood_stage" class="badge badge-dark d-none">{{ 'watermark_flood_stage'|trans }}</span>
                            </td>
                        {% endif %}

                        {% if 'uptime' == column %}
                            <td class="d-none d-xl-table-cell">
                                <span id="{{ row['name'] }}-uptime">{{ row['uptime'] }}</span>
                            </td>
                        {% endif %}

                        {% if 'load_average' == column %}
                            <td>
                                {% if row['stats']['os']['cpu']['load_average'] is defined %}
                                    {% if row['stats']['os']['cpu']['load_average']['1m'] is defined %}
                                        <strong>1 min: <span id="{{ row['name'] }}-load-average-1m">{{ row['stats']['os']['cpu']['load_average']['1m']|round(2) }}</span></strong>
                                    {% endif %}
                                    {% if row['stats']['os']['cpu']['load_average']['5m'] is defined %}
                                        <br><small>5 min: <span id="{{ row['name'] }}-load-average-5m">{{ row['stats']['os']['cpu']['load_average']['5m']|round(2) }}</span></small>
                                    {% endif %}
                                    {% if row['stats']['os']['cpu']['load_average']['15m'] is defined %}
                                        <br><small>15 min: <span id="{{ row['name'] }}-load-average-15m">{{ row['stats']['os']['cpu']['load_average']['15m']|round(2) }}</span></small>
                                    {% endif %}
                                {% endif %}
                            </td>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
