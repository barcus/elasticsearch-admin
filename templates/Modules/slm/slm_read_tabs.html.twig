        </li>

        <li class="nav-item">
            <a class="nav-link text-{{ theme_color_2 }}{% if 'stats' == active %} active bg-{{ theme_color_1 }}{% endif %}" href="{{ path('slm_read_stats', {'name': policy.name}) }}">{{ 'stats'|trans }}</a>
