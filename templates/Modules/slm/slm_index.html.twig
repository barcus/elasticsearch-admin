        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'list'|trans, 'badge': {'title': policies.total}}) }}

            {% if 0 < policies.total %}
                {{ appImport.paginator(policies) }}

                {% include 'Modules/slm/slm_list.html.twig' with {'policies': policies} %}

                {{ appImport.paginator(policies) }}
