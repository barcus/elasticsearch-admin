{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ 'tasks'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'tasks'|trans, 'badge': tasks.total}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/tasks/tasks_tabs.html.twig' with {'active': 'list'} %}
{% endblock %}

{% block main_content %}
    {% if 0 < tasks.total %}
        {% embed 'card_embed.html.twig' %}
            {% import 'app_import.html.twig' as appImport %}
            {% block content %}
                {{ appImport.heading({'level': 3, 'title': 'list'|trans}) }}

                {{ appImport.paginator(tasks) }}

                {% include 'Modules/tasks/tasks_list.html.twig' with {'tasks': tasks} %}

                {{ appImport.paginator(tasks) }}
            {% endblock %}
        {% endembed %}
    {% endif %}
{% endblock %}
