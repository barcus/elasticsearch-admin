                <a class="nav-link{% if 'update' == active %} active{% endif %}" href="{{ path('elasticsearch_roles_update', {'role': role['role']}) }}">{{ 'update'|trans }}</a>
            </li>
        {% endif %}
    {% endif %}
</ul>
