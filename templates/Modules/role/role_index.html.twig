{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ 'roles'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'roles'|trans}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/role/role_tabs.html.twig' with {'active': 'list'} %}
{% endblock %}

{% block main_content %}
    {% if 0 < roles.total %}
        {% embed 'card_embed.html.twig' %}
            {% import 'app_import.html.twig' as appImport %}
            {% block content %}
                {{ appImport.heading({'level': 3, 'title': 'list'|trans, 'badge': roles.total}) }}

                {{ appImport.paginator(roles) }}

                {% include 'Modules/role/role_list.html.twig' with {'roles': roles} %}

                {{ appImport.paginator(roles) }}
            {% endblock %}
        {% endembed %}
    {% endif %}
{% endblock %}
