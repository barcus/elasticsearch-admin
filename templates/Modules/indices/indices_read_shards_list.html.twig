{% embed 'table_embed.html.twig' %}
    {% import 'app_import.html.twig' as appImport %}

    {% set columns = {'shard': true, 'primary': true, 'state': true, 'unassigned_reason': true, 'documents': true, 'size': true, 'node': true} %}

    {% block thead %}
        <tr>
            {% for column, display in columns %}
                {% if true == display %}
                    {% if 'shard' == column %}
                        <th>
                            shard
                        </th>
                    {% endif %}

                    {% if 'primary' == column %}
                        <th>
                            primary
                        </th>
                    {% endif %}

                    {% if 'state' == column %}
                        <th>
                            state
                        </th>
                    {% endif %}

                    {% if 'unassigned_reason' == column %}
                        <th>
                            unassigned_reason
                        </th>
                    {% endif %}

                    {% if 'documents' == column %}
                        <th>
                            documents
                        </th>
                    {% endif %}

                    {% if 'size' == column %}
                        <th>
                            size
                        </th>
                    {% endif %}

                    {% if 'node' == column %}
                        <th>
                            node
                        </th>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </tr>
    {% endblock %}

    {% block tbody %}
        {% for row in shards.rows %}
            <tr>
                {% for column, display in columns %}
                    {% if true == display %}
                        {% if 'shard' == column %}
                            <td>
                                {{ row['shard'] }}
                            </td>
                        {% endif %}

                        {% if 'primary' == column %}
                            <td>
                                {% if 'p' == row['prirep'] %}
                                    {{ appImport.badge({'title': 'true', 'context': 'true'}) }}
                                {% else %}
                                    {{ appImport.badge({'title': 'false', 'context': 'false'}) }}
                                {% endif %}
                            </td>
                        {% endif %}

                        {% if 'state' == column %}
                            <td>
                                {{ row['state'] }}
                            </td>
                        {% endif %}

                        {% if 'unassigned_reason' == column %}
                            <td>
                                {{ row['unassigned.reason'] }}
                            </td>
                        {% endif %}

                        {% if 'documents' == column %}
                            <td>
                                {{ row['docs'] }}
                            </td>
                        {% endif %}

                        {% if 'size' == column %}
                            <td>
                                {{ row['store'] }}
                            </td>
                        {% endif %}

                        {% if 'node' == column %}
                            <td>
                                {% if row['node'] %}
                                    <a href="{{ path('nodes_read', {'node': row['node']}) }}">{{ row['node'] }}</a>
                                {% endif %}
                            </td>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
