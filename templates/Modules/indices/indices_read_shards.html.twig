{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ 'indices'|trans }} - {{ index['index'] }} - {{ 'shards'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'indices'|trans, 'link': path('indices', {})}) }}
{% endblock %}

{% block heading_2 %}
    {{ appImport.heading({'level': 2, 'title': index['index']}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/indices/indices_read_tabs.html.twig' with {'active': 'shards'} %}
{% endblock %}

{% block main_content %}
    {% embed 'card_embed.html.twig' %}
        {% import 'app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'shards'|trans, 'badge': shards.total}) }}

            {% if 0 < shards.total %}
                {{ appImport.paginator(shards) }}

                {% include 'Modules/indices/indices_read_shards_list.html.twig' with {'shards': shards} %}

                {{ appImport.paginator(shards) }}
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}
