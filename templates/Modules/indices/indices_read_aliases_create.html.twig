{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ 'create_alias'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': index['index']}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/indices/indices_read_tabs.html.twig' with {'active': 'aliases'} %}
{% endblock %}

{% block heading_2 %}
    {{ appImport.heading({'level': 2, 'title': 'create_alias'|trans}) }}
{% endblock %}

{% block buttons %}
    {% embed 'buttons_embed.html.twig' %}
        {% import 'app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.button({'context': 'secondary', 'title': 'cancel'|trans, 'url': path('indices_read_aliases', {'index': index['index']})}) }}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block main_content %}
    {% embed 'card_embed.html.twig' %}
        {% import 'app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.form({'form': form}) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
