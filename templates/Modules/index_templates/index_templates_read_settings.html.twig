{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ 'index_templates'|trans }} - {{ template['name'] }} - {{ 'settings'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'index_templates'|trans, 'link': path('index_templates', {})}) }}
{% endblock %}

{% block heading_2 %}
    {{ appImport.heading({'level': 2, 'title': template['name']}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/index_templates/index_templates_read_tabs.html.twig' with {'active': 'settings'} %}
{% endblock %}

{% block main_content %}
    {% embed 'card_embed.html.twig' %}
        {% import 'app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'settings'|trans}) }}

            <pre>{{ template['settings']|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
        {% endblock %}
    {% endembed %}
{% endblock %}
