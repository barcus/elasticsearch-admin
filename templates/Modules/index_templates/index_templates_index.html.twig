{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ 'index_templates'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'index_templates'|trans, 'badge': indexTemplates.total}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/index_templates/index_templates_tabs.html.twig' with {'active': 'list'} %}
{% endblock %}

{% block main_content %}
    {% if 0 < indexTemplates.total %}
        {% embed 'card_embed.html.twig' %}
            {% import 'app_import.html.twig' as appImport %}
            {% block content %}
                {{ appImport.heading({'level': 3, 'title': 'list'|trans, 'badge': indexTemplates.total}) }}

                {{ appImport.paginator(indexTemplates) }}

                {% include 'Modules/index_templates/index_templates_list.html.twig' with {'indexTemplates': indexTemplates} %}

                {{ appImport.paginator(indexTemplates) }}
            {% endblock %}
        {% endembed %}
    {% endif %}
{% endblock %}
