{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ template['name'] }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'index_templates'|trans, 'link': path('index_templates', {})}) }}
{% endblock %}

{% block heading_2 %}
    {{ appImport.heading({'level': 2, 'title': template['name']}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/index_templates/index_templates_read_tabs.html.twig' with {'active': 'summary'} %}
{% endblock %}

{% block main_content %}
    {% embed 'card_embed.html.twig' %}
        {% import 'app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'summary'|trans}) }}

            {% embed 'buttons_embed.html.twig' %}
                {% import 'app_import.html.twig' as appImport %}
                {% block content %}
                    {{ appImport.buttonModal({
                        'id': 'IndexTemplateDelete',
                        'title': 'delete'|trans,
                        'body': template['name'],
                        'href': path('index_templates_delete', {'name': template['name']}),
                    }) }}
                {% endblock %}
            {% endembed %}

            <p>
                <strong>{{ 'index_patterns'|trans }}</strong><br>
                {{ template['index_patterns']|join(', ') }}
            </p>

            <p>
                <strong>{{ 'order'|trans }}</strong><br>
                {{ template['order'] }}
            </p>
        {% endblock %}
    {% endembed %}
{% endblock %}
