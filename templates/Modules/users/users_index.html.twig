{% extends 'base.html.twig' %}
{% import 'app_import.html.twig' as appImport %}

{% block head_title %}{{ 'users'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'users'|trans}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/users/users_tabs.html.twig' with {'active': 'list'} %}
{% endblock %}

{% block main_content %}
    {% if 0 < users.total %}
        {% embed 'card_embed.html.twig' %}
            {% import 'app_import.html.twig' as appImport %}
            {% block content %}
                {{ appImport.heading({'level': 3, 'title': 'list'|trans, 'badge': users.total}) }}

                {{ appImport.paginator(users) }}

                {% include 'Modules/users/users_list.html.twig' with {'users': users} %}

                {{ appImport.paginator(users) }}
            {% endblock %}
        {% endembed %}
    {% endif %}
{% endblock %}
