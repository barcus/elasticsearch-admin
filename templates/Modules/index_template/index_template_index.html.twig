{% extends 'base.html.twig' %}
{% import 'Import/app_import.html.twig' as appImport %}

{% block head_title %}{{ 'index_templates'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'index_templates'|trans}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/index_template/index_template_tabs.html.twig' with {'active': 'list'} %}
{% endblock %}

{% block main_content %}
    {% if 0 < indexTemplates.total %}
        {% embed 'Embed/card_embed.html.twig' %}
            {% import 'Import/app_import.html.twig' as appImport %}
            {% block content %}
                {{ appImport.heading({'level': 3, 'title': 'list'|trans, 'badge': indexTemplates.total}) }}

                <p>
                    <button class="btn btn-secondary btn-sm" type="button" data-toggle="collapse" data-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                        {{ 'filter'|trans }}
                    </button>
                </p>

                <div class="collapse" id="collapseFilter">
                    <p>
                        <label for="searchInput"><strong>{{ 'name'|trans }}</strong></label>
                        <input
                            id="searchInput"
                            class="form-control form-control-sm"
                            type="text"
                            autocomplete="off"
                        >
                    </p>

                    <p>
                        <strong>{{ 'index_template_system'|trans }}</strong><br>
                        {% for v in ['true', 'false'] %}
                            <span class="custom-control custom-switch d-inline mr-2">
                                <input
                                    type="checkbox"
                                    class="custom-control-input searchCheckbox"
                                    id="index_template_system{{ v }}Switch"
                                    checked="checked"
                                    value="index_template_system-{{ v }}"
                                >
                                <label class="custom-control-label" for="index_template_system{{ v }}Switch">{{ appImport.badge({'title': ('boolean.' ~ v)|trans, 'context': v}) }}</label>
                            </span>
                        {% endfor %}
                    </p>
                </div>

                {{ appImport.paginator(indexTemplates) }}

                {% include 'Modules/index_template/index_template_list.html.twig' with {'indexTemplates': indexTemplates} %}

                {{ appImport.paginator(indexTemplates) }}
            {% endblock %}
        {% endembed %}
    {% endif %}
{% endblock %}
