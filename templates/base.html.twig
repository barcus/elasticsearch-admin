{% import 'Import/app_import.html.twig' as appImport %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
<meta charset="UTF-8">
<title>{% block head_title %}elasticsearch-admin{% endblock %}</title>
<meta name="robots" content="noindex, nofollow, noarchive">
<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
<meta name="HandheldFriendly" content="true">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="mobile-web-app-capable" content="yes">
<link rel="shortcut icon" href="{{ asset('favicon-' ~ cluster_health['status'] ~ '.png') }}">
{% block styles %}
{{ encore_entry_link_tags('app-css') }}
{% endblock %}
</head>
<body>
<div class="container-fluid">
    <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="{{ 'toggle_navigation'|trans }}">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="navbar-nav">
                {% if is_granted('IS_AUTHENTICATED_FULLY', app.user) %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('cluster') }}">{{ 'cluster'|trans }}{{ appImport.badge({'title': root['version']['number'], 'context': cluster_health['status']}) }}</a>
                    </li>

                    {% if is_granted('NODES', 'global') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('nodes') }}">{{ 'nodes'|trans }}</a>
                        </li>
                    {% endif %}

                    {% if is_granted('INDICES', 'global') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('indices') }}">{{ 'indices'|trans }}</a>
                        </li>
                    {% endif %}

                    {% if is_granted('SHARDS', 'global') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('shards') }}">{{ 'shards'|trans }}</a>
                        </li>
                    {% endif %}

                    {% if is_granted('CONFIGURATION', 'global') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="configurationDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{ 'configuration'|trans }}
                            </a>
                            <div class="dropdown-menu" aria-labelledby="configurationDropdown">
                                {% if is_granted('INDEX_TEMPLATES_LEGACY', 'global') %}
                                    <a class="dropdown-item" href="{{ path('index_templates_legacy') }}">{{ 'index_templates_legacy'|trans }}</a>
                                {% endif %}
                                {% if is_granted('INDEX_TEMPLATES', 'global') %}
                                    <a class="dropdown-item" href="{{ path('index_templates') }}">
                                        {{ 'index_templates'|trans }}
                                        {% if false == check_version(root, '7.8') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}
                                    </a>
                                {% endif %}
                                {% if is_granted('COMPONENT_TEMPLATES', 'global') %}
                                    <a class="dropdown-item" href="{{ path('component_templates') }}">
                                        {{ 'component_templates'|trans }}
                                        {% if false == check_version(root, '7.8') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}
                                    </a>
                                {% endif %}
                                {% if is_granted('ILM_POLICIES', 'global') %}
                                    <a class="dropdown-item" href="{{ path('ilm') }}">
                                        {{ 'ilm'|trans }}
                                        {% if false == has_feature(xpack, 'ilm') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}
                                    </a>
                                {% endif %}
                                {% if is_granted('SLM_POLICIES', 'global') %}
                                    <a class="dropdown-item" href="{{ path('slm') }}">
                                        {{ 'slm'|trans }}
                                        {% if false == has_feature(xpack, 'slm') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}
                                    </a>
                                {% endif %}
                                {% if is_granted('REPOSITORIES', 'global') %}
                                    <a class="dropdown-item" href="{{ path('repositories') }}">{{ 'repositories'|trans }}</a>
                                {% endif %}
                                {% if is_granted('ENRICH_POLICIES', 'global') %}
                                    <a class="dropdown-item" href="{{ path('enrich') }}">
                                        {{ 'enrich'|trans }}
                                        {% if false == has_feature(xpack, 'enrich') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}
                                    </a>
                                {% endif %}
                                {% if is_granted('ELASTICSEARCH_USERS', 'global') %}
                                    <a class="dropdown-item" href="{{ path('elasticsearch_users') }}">
                                        {{ 'elasticsearch_users'|trans }}
                                        {% if false == has_feature(xpack, 'security') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}
                                    </a>
                                {% endif %}
                                {% if is_granted('ELASTICSEARCH_ROLES', 'global') %}
                                    <a class="dropdown-item" href="{{ path('elasticsearch_roles') }}">
                                        {{ 'elasticsearch_roles'|trans }}
                                        {% if false == has_feature(xpack, 'security') %}{{ appImport.badge({'title': 'disabled'|trans, 'context': 'warning'}) }}{% endif %}
                                    </a>
                                {% endif %}
                            </div>
                        </li>
                    {% endif %}

                    {% if is_granted('TOOLS', 'global') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="toolsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{ 'tools'|trans }}
                            </a>
                            <div class="dropdown-menu" aria-labelledby="toolsDropdown">
                                {% if is_granted('SNAPSHOTS', 'global') %}
                                    <a class="dropdown-item" href="{{ path('snapshots') }}">{{ 'snapshots'|trans }}</a>
                                {% endif %}
                                {% if is_granted('PIPELINES', 'global') %}
                                    <a class="dropdown-item" href="{{ path('pipelines') }}">{{ 'pipelines'|trans }}</a>
                                {% endif %}
                                {% if is_granted('TASKS', 'global') %}
                                    <a class="dropdown-item" href="{{ path('tasks') }}">{{ 'tasks'|trans }}</a>
                                {% endif %}
                                {% if is_granted('REMOTE_CLUSTERS', 'global') %}
                                    <a class="dropdown-item" href="{{ path('remote_clusters') }}">{{ 'remote_clusters'|trans }}</a>
                                {% endif %}
                                {% if is_granted('CAT', 'global') %}
                                    <a class="dropdown-item" href="{{ path('cat') }}">{{ 'cat'|trans }}</a>
                                {% endif %}
                                {% if is_granted('CONSOLE', 'global') %}
                                    <a class="dropdown-item" href="{{ path('console') }}">{{ 'console'|trans }}</a>
                                {% endif %}
                                {% if is_granted('DEPRECATIONS', 'global') %}
                                    <a class="dropdown-item" href="{{ path('deprecations') }}">{{ 'deprecations'|trans }}</a>
                                {% endif %}
                                {% if is_granted('LICENSE', 'global') %}
                                    <a class="dropdown-item" href="{{ path('license') }}">{{ 'license'|trans }}</a>
                                {% endif %}
                            </div>
                        </li>
                    {% endif %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">{{ 'logout'|trans }}</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">{{ 'login'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>

    {% block heading_1 %}
    {% endblock %}

    {% for label, messages in flashes|default(app.flashes) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message|trans }}
                <button type="button" class="close" data-dismiss="alert" aria-label="{{ 'close'|trans }}">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block heading_2 %}
    {% endblock %}

    {% block tabs %}
    {% endblock %}

    {% block form_search %}
    {% endblock %}

    {% block main_content %}
    {% endblock %}
</div>
{% block scripts %}
<script type="text/javascript">
var trans_required = '{{ 'required'|trans|escape('js') }}';
</script>
{{ encore_entry_script_tags('app-js') }}
{% endblock %}
</body>
</html>
